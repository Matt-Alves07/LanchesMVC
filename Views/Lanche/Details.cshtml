@Model Lanche

<div class="container">
    <div class="row justify-content-center">
        <div class="card border-primary mb-3" style="width: 25rem;">
            <div class="text-center h-100 flex-fill">
                <img src="@Model.ImagemUrl" class="card-img-top" alt="@Model.Nome">
            </div>
            <div class="card-block">
                <h2 class="card-title">@Model.Nome</h2>
                <p class="card-text"><h5>@Model.DescricaoDetalhada</h5></p>
                <p class="btn btn-group align-content-end">
                    <a asp-controller="Lanche" asp-action="List" class="btn btn-outline-info">Ver todos os lanches</a>
                    <a class="btn btn-outline-primary" id="cartButton" asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinhoCompra" asp-route-lancheId="@Model.LancheId">
                        Adicionar @Model.Nome ao carrinho
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>