<!-- Example single danger button -->
<div class="btn-group">
    <button type="button" class="btn dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" style="color:white">
        Lanches
    </button>
    <ul class="dropdown-menu dropdown-menu-dark">
        @foreach (var categoria in Model)
        {
            <li>
                <a class="dropdown-item" asp-controller="Lanche" asp-action="List" asp-route-categoria="@categoria.Nome" style="color:white">@categoria.Nome</a>
            </li>
        }
        <li><hr class="dropdown-divider"></li>
        <li><a class="dropdown-item" asp-controller="Lanche" asp-action="List" asp-route-categoria="" style="color:white">Todos os lanches</a></li>
    </ul>
</div>
