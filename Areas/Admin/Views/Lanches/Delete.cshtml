@model LanchesMVC.Models.Lanche

@{
    ViewData["Title"] = "Excluir";
}

<h1>Deseja realmente excluir esse lanche?</h1>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Descricao)
        </dd>
    </dl>
    <hr />
    <form asp-action="Delete">
        <input type="hidden" asp-for="LancheId" />
        <input type="submit" value="Excluir" class="btn btn-outline-danger" />
        <a type="button" class="btn btn-outline-primary" asp-action="Index">Voltar a lista</a>
    </form>
</div>
