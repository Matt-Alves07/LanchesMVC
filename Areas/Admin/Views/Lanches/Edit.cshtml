@model LanchesMVC.Models.Lanche

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="LancheId" />
    <div class="form-group">
        <div class="row">
            <div class="col-md-4">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="CategoriaId" class="control-label">Categoria</label>
                <select asp-for="CategoriaId" class ="form-control" asp-items="ViewBag.CategoriaId"></select>
            </div>

            <div class="col-md-2">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-4">
                <label asp-for="DescricaoCurta" class="control-label"></label>
                <input asp-for="DescricaoCurta" class="form-control" />
                <span asp-validation-for="DescricaoCurta" class="text-danger"></span>
            </div>

            <div class="col-md-8">
                <label asp-for="DescricaoDetalhada" class="control-label"></label>
                <input asp-for="DescricaoDetalhada" class="form-control" />
                <span asp-validation-for="DescricaoDetalhada" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                <label asp-for="ImagemUrl" class="control-label"></label>
                <input asp-for="ImagemUrl" class="form-control" />
                <span asp-validation-for="ImagemUrl" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="ImagemThumbnailUrl" class="control-label"></label>
                <input asp-for="ImagemThumbnailUrl" class="form-control" />
                <span asp-validation-for="ImagemThumbnailUrl" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-2">
                <div class="form-check form-switch">
                    <input class="form-check-input" asp-for="IsLanchePreferido" id="switchPreferido" />
                    <label class="form-check-label" for="switchPreferido">@Html.DisplayNameFor(model => model.IsLanchePreferido)</label>
                </div>
            </div>

            <div class="col-md-2">
                <div class="form-check form-switch">
                    <input class="form-check-input" asp-for="EmEstoque" id="switchEstoque" />
                    <label class="form-check-label" for="switchEstoque">@Html.DisplayNameFor(model => model.EmEstoque)</label>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-outline-success" />
        <a type="button" class="btn btn-outline-primary" asp-action="Index">Voltar a lista</a>
    </div>
</form>