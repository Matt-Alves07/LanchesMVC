<form method="post" enctype="multipart/form-data" asp-controller="AdminImagens" asp-action="UploadFiles">
    <div class="row">
        <div class="col-md-2">
            <img src="~/images/upload2.png" width="200" height="150" />
        </div>
        <div class="col-md-10">
            <div class="form-group">
                <div class="input-group mt-5">
                    <input type="file" multiple class="form-control" name="files" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload" />
                    <button class="btn btn-outline-success" type="submit" id="inputGroupFileAddon04">Enviar</button>
                </div>
            </div>
        </div>
    </div>
</form>
<hr />
<form method="post" enctype="multipart/form-data" asp-controller="AdminImagens" asp-action="GetImagens">
    <div class="row">
        <div class="col-md-2">
            <img src="~/images/visualizar1.jpg" width="200" height="150" />
        </div>
        <div class="col-md-10">
            <div class="form-group">
                <div class="input-group mt-5">
                    <input type="submit" class="btn btn-outline-success" value="Visualizar arquivos no servidor" />
                </div>
            </div>
        </div>
    </div>
</form>

<div class="container">
    @if (ViewData["Excluído"] != null)
    {
        <li>@ViewData["Excluído"]</li>
    }
</div>