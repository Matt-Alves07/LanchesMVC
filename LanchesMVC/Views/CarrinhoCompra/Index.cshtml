@model CarrinhoCompraViewModel;

<div class="container">
    <div class="row">
        <div>
            <img src="~/images/Full-Cart-icon.png" width="30" height="35"/>
            <h4>Seu carrinho de compras:</h4>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Quantidade</th>
                    <th>Lanche</th>
                    <th class="text-right">Preço</th>
                    <th class="text-right">Subtotal</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach(var item in Model.CarrinhoCompra.CarrinhoCompraItems)
                {
                    <tr>
                        <td class="text-center">@item.Quantidade</td>
                        <td class="text-left">@item.Lanche.Nome</td>
                        <td class="text-right">R$ @item.Lanche.Preco.ToString()</td>

                        <td class="text-right">
                            R$ @((item.Quantidade * item.Lanche.Preco).ToString())
                        </td>

                        <td>
                            <a asp-controller="CarrinhoCompra" asp-action="RemoverItemDoCarrinhoCompra" asp-route-LancheId="@item.Lanche.LancheId">
                                <img src="~/images/Remove.ico"/>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

            <tfoot>
                <tr>
                    <td colspan="3" class="text-right">Total:</td>
                    <td class="text-right">
                        R$ @Model.CarrinhoCompraTotal.ToString("0.00")
                    </td>
                </tr>
            </tfoot>
        </table>

        <div class="text-right">
            <div class="btn-group">
                <a class="btn btn-success" asp-controller="Pedido" asp-action="Checkout">Finalizar Pedido</a>
                &nbsp;&nbsp;&nbsp;
                <a class="btn btn-primary" asp-controller="Lanche" asp-action="List">Continuar Comprando</a>
            </div>
        </div>
    </div>
</div>